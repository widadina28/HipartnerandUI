<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Hire.HireActivity">


        <LinearLayout
            android:id="@+id/ln_spinner_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Projects"/>
            <Spinner
                android:id="@+id/spinner_hire_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ln_spinner_project"/>
        <EditText
            android:id="@+id/et_desc_hire"
            android:layout_width="300dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/tv_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/new_edit_text"
            android:backgroundTint="@color/maincolor"/>

        <TextView
        android:id="@+id/tv_price_hire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_desc_hire"/>
        <EditText
            android:id="@+id/et_price_hire"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/new_edit_text"
            android:backgroundTint="@color/maincolor"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_price_hire"/>

        <TextView
            android:id="@+id/tv_date_hire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_price_hire"/>
        <EditText
            android:id="@+id/et_date_hire"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/new_edit_text"
            android:backgroundTint="@color/maincolor"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_hire"/>

        <Button
            android:id="@+id/btn_submit_hire"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/new_button"
            android:backgroundTint="@color/maincolor"
            android:text="Submit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_date_hire" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>