<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".regist"
        android:background="@drawable/back2">

        <ImageView
            android:id="@+id/iv_logoregist"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:paddingHorizontal="10sp"
            android:src="@drawable/logonew"
            app:layout_constraintBottom_toTopOf="@id/tv_createacc"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_createacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/iv_logoregist"
            android:textSize="50dp"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="123dp"
            android:textColor="#82B56F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="16dp"
            android:hint="Name"
            android:background="@drawable/new_edit_text"
            android:backgroundTint="@color/maincolor"
            app:layout_constraintTop_toBottomOf="@id/tv_createacc"/>

        <EditText
            android:id="@+id/et_emailregist"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="16dp"
            android:hint="Email"
            android:background="@drawable/new_edit_text"
            android:backgroundTint="@color/maincolor"
            app:layout_constraintTop_toBottomOf="@id/et_name"/>

        <EditText
            android:id="@+id/et_pwregist"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="16dp"
            android:hint="Password"
            android:background="@drawable/new_edit_text"
            android:backgroundTint="@color/maincolor"
            app:layout_constraintTop_toBottomOf="@id/et_emailregist"/>

        <Button
            android:id="@+id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_pwregist"
            android:backgroundTint="#82B56F"
            android:background="@drawable/new_button"
            android:text="CREATE ACCOUNT"
            android:textColor="#FF4E4848"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="60dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
