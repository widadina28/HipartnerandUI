<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profilecompany.EditCompany">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/back2">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgprofile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                app:civ_border_color="@color/maincolor"
                android:layout_gravity="center"
                app:civ_border_overlay="true" />

            <Button
                android:id="@+id/editimg_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:text="Edit"
                android:textSize="10dp"
                android:backgroundTint="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Comapny Name"/>
            
            <EditText
                android:id="@+id/et_company_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:hint="Insert Company Name"
                android:background="@drawable/new_edit_text"
                android:backgroundTint="@color/maincolor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Comapny Field"/>

            <EditText
                android:id="@+id/et_company_field"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:hint="Inser Company Field"
                android:background="@drawable/new_edit_text"
                android:backgroundTint="@color/maincolor"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="City"/>

                <Spinner
                    android:id="@+id/spinner_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp" ></Spinner>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Description"/>

            <EditText
                android:id="@+id/et_company_description"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:hint="Insert Description"
                android:background="@drawable/new_edit_text"
                android:backgroundTint="@color/maincolor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Instagram"/>

            <EditText
                android:id="@+id/et_company_instagram"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:hint="Instagram Account"
                android:background="@drawable/new_edit_text"
                android:backgroundTint="@color/maincolor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Linkedin"/>

            <EditText
                android:id="@+id/et_company_linkedin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:hint="Linkedin Account"
                android:background="@drawable/new_edit_text"
                android:backgroundTint="@color/maincolor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Telephone Number"/>

            <EditText
                android:id="@+id/et_company_phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:hint="Insert Telephone Number"
                android:background="@drawable/new_edit_text"
                android:backgroundTint="@color/maincolor"/>

            <Button
                android:id="@+id/btn_submit_edit_company"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Submit"
                android:layout_gravity="center"
                android:backgroundTint="#272323"
                android:textColor="#FFf"
                android:background="@drawable/new_button"/>

        </LinearLayout>


    </ScrollView>
</layout>
